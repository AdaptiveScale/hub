{
  "specVersion": "1.0",
  "label": "Spam Classification using Spark",
  "description": "A Spark program that trains a Spam Classifier using Naive Bayes, then classifies messages read from Kafka.",
  "author": "Cask",
  "org": "Cask Data, Inc.",
  "created": 1474060461,
  "categories": [ "example" ],
  "cdapVersion": "[4.0.0-SNAPSHOT,4.1.0)",
  "actions": [
    {
      "type": "create_stream",
      "arguments": [
        {
          "name": "name",
          "value": "trainingDataStream"
        }
      ]
    },
    {
      "type": "load_datapack",
      "arguments": [
        {
          "name": "name",
          "value": "trainingDataStream"
        },
        {
          "name": "files",
          "value": [ "training.tsv" ]
        }
      ]
    },
    {
      "type": "create_artifact",
      "arguments": [
        {
          "name": "name",
          "value": "SpamClassifier"
        },
        {
          "name": "version",
          "value": "4.0.0"
        },
        {
          "name": "scope",
          "value": "user"
        },
        {
          "name": "jar",
          "value": "SpamClassifier-4.0.0.jar"
        }
      ]
    },
    {
      "type": "create_app",
      "arguments": [
        {
          "name": "artifact",
          "value": {
            "scope": "user",
            "name": "SpamClassifier",
            "version": "4.0.0"
          }
        },
        {
          "name": "name",
          "value": "SpamClassifier"
        }
      ]
    }
  ]
}
