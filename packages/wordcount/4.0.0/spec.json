{
  "specVersion": "1.0",
  "label": "Word Count with a Flow",
  "description": "A Flow that reads text from a Stream and stores word counts and word associations that can be retrieved by a Service.",
  "author": "Cask Data Inc.",
  "org": "Cask Data Inc.",
  "created": 1474060461,
  "categories": [ "example" ],
  "cdapVersion": "[4.0.0-SNAPSHOT,4.1.0)",
  "actions": [
    {
      "type": "create_stream",
      "arguments": [
        {
          "name": "name",
          "value": "wordStream"
        },
        {
          "name": "loadfiles",
          "value": [ "data.txt" ]
        }
      ]
    },
    {
      "type": "create_artifact",
      "arguments": [
        {
          "name": "name",
          "value": "WordCount"
        },
        {
          "name": "version",
          "value": "4.0.0"
        },
        {
          "name": "scope",
          "value": "user"
        },
        {
          "name": "jar",
          "value": "WordCount-4.0.0.jar"
        }
      ]
    },
    {
      "type": "create_app",
      "arguments": [
        {
          "name": "artifact",
          "value": {
            "scope": "user",
            "name": "WordCount",
            "version": "4.0.0"
          }
        },
        {
          "name": "name",
          "value": "WordCount"
        }
      ]
    }
  ]
}
