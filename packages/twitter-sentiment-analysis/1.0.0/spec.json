{
  "specVersion": "1.0",
  "label": "Social Media Sentiment Analysis",
  "description": "As many companies use social media marketing to prompte their brands, it has become necessary to evaluate the effectiveness of the campaigns. Understanding sentiment about product launch, or product features can be easily achieved with these use case. This use case includes two applications. First, a trainer that uses the human labelled data to train the model, and second application for classifying.",
  "author": "Cask",
  "org": "Cask Data, Inc.",
  "created": 1473901763,
  "categories": [ "usecase" ],
  "cdapVersion": "[4.0.0-SNAPSHOT,4.1.0)",
  "actions": [
    {
      "type": "create_stream",
      "label": "Labeled Tweets Stream",
      "arguments": [
        {
          "name": "name",
          "value": "labeledTweets"
        },
        {
          "name": "description",
          "value": "Contains tweets that have been labeled as positive, neutral, or negative"
        }
      ]
    },
    {
      "type": "load_datapack",
      "label": "Labeled Tweet Data",
      "arguments": [
        {
          "name": "name",
          "value": "labeledTweets"
        },
        {
          "name": "files",
          "value": [ "labeled_tweets.tsv" ]
        }
      ]
    },
    {
      "type": "create_stream",
      "label": "Raw Tweets Stream",
      "arguments": [
        {
          "name": "name",
          "value": "rawTweets"
        },
        {
          "name": "description",
          "value": "Contains raw tweets"
        }
      ]
    },
    {
      "type": "load_datapack",
      "label": "Raw Tweet Data",
      "arguments": [
        {
          "name": "name",
          "value": "rawTweets"
        },
        {
          "name": "files",
          "value": [ "raw_tweets.txt" ]
        }
      ]
    },
    {
      "type": "create_pipeline",
      "label": "Sentiment Classifier",
      "arguments": [
        {
          "name": "artifact",
          "value": {
            "scope": "system",
            "name": "cdap-data-pipeline",
            "version": "4.0.0-SNAPSHOT"
          }
        },
        {
          "name": "name",
          "value": "SentimentClassifier",
          "canModify": true
        },
        {
          "name": "config",
          "value": "labeler.json"
        } 
      ]
    },
    {
      "type": "create_pipeline",
      "label": "Sentiment Model Trainer",
      "arguments": [
        {
          "name": "artifact",
          "value": {
            "scope": "system",
            "name": "cdap-data-pipeline",
            "version": "4.0.0-SNAPSHOT"
          }
        },
        {
          "name": "name",
          "value": "SentimentModelTrainer",
          "canModify": true
        },
        {
          "name": "config",
          "value": "trainer.json"
        } 
      ]
    }
  ]
}
